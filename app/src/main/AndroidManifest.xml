    <!--<permission-->
        <!--android:name="com.smartbuilders.smartsales.ecommerce.permission.C2D_MESSAGE"-->
        <!--android:protectionLevel="signature" />-->

    <!--<uses-permission android:name="com.smartbuilders.smartsales.ecommerce.permission.C2D_MESSAGE" />-->
    <!-- used by GCM -->

    <protected-broadcast android:name="android.intent.action.MEDIA_MOUNTED" />
    <!-- necesarion para consultar el mac address del dispositivo -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <!--Permisos relacionados a la notificacion que se muestra en el icono de la aplicacion -->
    <!--for Samsung-->
    <uses-permission android:name="com.sec.android.provider.badge.permission.READ"/>
    <uses-permission android:name="com.sec.android.provider.badge.permission.WRITE"/>

    <!--for htc-->
    <uses-permission android:name="com.htc.launcher.permission.READ_SETTINGS"/>
    <uses-permission android:name="com.htc.launcher.permission.UPDATE_SHORTCUT"/>

    <!--for sony-->
    <uses-permission android:name="com.sonyericsson.home.permission.BROADCAST_BADGE"/>
    <uses-permission android:name="com.sonymobile.home.permission.PROVIDER_INSERT_BADGE"/>

    <!--for apex-->
    <uses-permission android:name="com.anddoes.launcher.permission.UPDATE_COUNT"/>

    <!--for solid-->
    <uses-permission android:name="com.majeur.launcher.permission.UPDATE_BADGE"/>

    <!--for huawei-->
    <uses-permission android:name="com.huawei.android.launcher.permission.CHANGE_BADGE" />
    <uses-permission android:name="com.huawei.android.launcher.permission.READ_SETTINGS" />
    <uses-permission android:name="com.huawei.android.launcher.permission.WRITE_SETTINGS" />
    <!--Hasta aqui permisos relacionados a la notificacion que se muestra en el icono de la aplicacion -->

    <application
        android:name="android.support.multidex.MultiDexApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name="com.smartbuilders.smartsales.ecommerce.SplashScreen"
            android:theme="@style/SplashTheme.NoActionBar" />

        <activity
            android:name="com.smartbuilders.smartsales.ecommerce.MainActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <!-- Usado para capturar el enlace por la aplicaion -->
                <data android:host="@string/company_host_name" />
                <data android:scheme="http" />
                <data android:scheme="https" />
                <data android:pathPattern="/.*" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.smartbuilders.smartsales.ecommerce.ProductsListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.smartbuilders.smartsales.ecommerce.ProductDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.smartbuilders.synchronizer.ids.AuthenticatorActivity" />

        <provider
            android:name="com.smartbuilders.smartsales.ecommerce.providers.CachedFileProvider"
            android:authorities="${applicationId}.providers.CachedFileProvider"
            android:exported="false"
            android:multiprocess="true" />
        <provider
            android:name="com.smartbuilders.synchronizer.ids.providers.DataBaseContentProvider"
            android:authorities="${applicationId}.providers.Syncadapter"
            android:exported="false"
            android:syncable="true" />
        <provider
            android:name="com.smartbuilders.synchronizer.ids.providers.SynchronizerContentProvider"
            android:authorities="${applicationId}.providers.SynchronizerContentProvider"
            android:exported="false"
            android:syncable="true" />

        <service android:name="com.smartbuilders.synchronizer.ids.syncadapter.authenticator.AuthenticatorService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>
        <service
            android:name="com.smartbuilders.synchronizer.ids.syncadapter.SyncService"
            android:exported="true"
            android:process=":sync">
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter" />
        </service>
        <!--
            Because android:exported is set to "false",
            the service is only available to this app.
        -->
        <service
            android:name="com.smartbuilders.smartsales.ecommerce.services.RequestResetUserPasswordService"
            android:exported="false" />

        <!--
            Because android:exported is set to "false",
            the service is only available to this app.
        -->
        <service
            android:name="com.smartbuilders.smartsales.ecommerce.services.RequestUserPasswordService"
            android:exported="false" />

        <!--
            Because android:exported is set to "false",
            the service is only available to this app.
        -->
        <service
            android:name="com.smartbuilders.smartsales.ecommerce.services.SyncDataWithServer"
            android:exported="false" />

        <!--
            Because android:exported is set to "false",
            the service is only available to this app.
        -->
        <service
            android:name="com.smartbuilders.smartsales.ecommerce.services.LoadProductsThumbImage"
            android:exported="false" />

        <!-- GCM -->
        <!--<receiver-->
            <!--android:name="com.google.android.gms.gcm.GcmReceiver"-->
            <!--android:exported="true"-->
            <!--android:permission="com.google.android.c2dm.permission.SEND">-->
            <!--<intent-filter>-->
                <!--<action android:name="com.google.android.c2dm.intent.RECEIVE" />-->
                <!--<action android:name="com.google.android.c2dm.intent.REGISTRATION" />-->

                <!--<category android:name="com.smartbuilders.smartsales.ecommerce" />-->
            <!--</intent-filter>-->
        <!--</receiver>-->

        <service
            android:name="com.smartbuilders.synchronizer.ids.gcm.MyGcmListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
            </intent-filter>
        </service>
        <service
            android:name="com.smartbuilders.synchronizer.ids.gcm.MyInstanceIDListenerService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.android.gms.iid.InstanceID" />
            </intent-filter>
        </service>
        <service
            android:name="com.smartbuilders.synchronizer.ids.gcm.RegistrationIntentService"
            android:exported="false" />
        <!-- GCM -->

        <receiver
            android:name="com.smartbuilders.synchronizer.ids.broadcastreceivers.AlarmReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="com.smartbuilders.ids.scheduler.AlarmReceiver.Action" />
            </intent-filter>
        </receiver>

        <!--
        Para revisar el estado de la sincronizacion automatica cuando cambia
        el tipo de conexion de red. Ya sea que se apague o encienda el wi-fi, se conecte
        a una red de wi-fi, etc.
        -->
        <receiver
            android:name="com.smartbuilders.synchronizer.ids.broadcastreceivers.NetworkReceiver"
            android:enabled="true">
            <intent-filter>
                <action android:name="android.net.conn.CONNECTIVITY_CHANGE" />
            </intent-filter>
        </receiver>

        <activity
            android:name="com.smartbuilders.smartsales.ecommerce.CategoriesListActivity"
            android:label="@string/title_activity_categories" />
        <activity
            android:name="com.smartbuilders.smartsales.ecommerce.SubCategoriesListActivity"
            android:label="@string/title_activity_sub_categories" />
        <activity
            android:name="com.smartbuilders.smartsales.ecommerce.ShoppingCartActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.smartbuilders.smartsales.ecommerce.OrdersListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.smartbuilders.smartsales.ecommerce.OrderDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.smartbuilders.smartsales.ecommerce.WishListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.smartbuilders.smartsales.ecommerce.SearchResultsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.smartbuilders.smartsales.ecommerce.BrandsListActivity"
            android:label="@string/title_activity_brands_list" />
        <activity
            android:name="com.smartbuilders.smartsales.ecommerce.ShoppingSaleActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.smartbuilders.smartsales.ecommerce.SalesOrderDetailActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.smartbuilders.smartsales.ecommerce.SalesOrdersListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.smartbuilders.smartsales.ecommerce.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name="com.smartbuilders.smartsales.ecommerce.ZoomImageActivity" />
        <activity
            android:name="com.smartbuilders.smartsales.ecommerce.BusinessPartnersListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.smartbuilders.smartsales.ecommerce.RegisterBusinessPartnerActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.smartbuilders.smartsales.ecommerce.CompanyActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.smartbuilders.smartsales.ecommerce.ShoppingSalesListActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.smartbuilders.smartsales.ecommerce.RequestUserPasswordActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.smartbuilders.smartsales.ecommerce.RequestResetUserPasswordActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.smartbuilders.smartsales.ecommerce.ContactUsActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="com.smartbuilders.smartsales.ecommerce.RecommendedProductsListActivity"
            android:theme="@style/AppTheme.NoActionBar" />

        <receiver
            android:name="com.smartbuilders.smartsales.ecommerce.receivers.SynchronizationFinishedBroadcastReceiver"
            android:enabled="true"
            android:exported="false">
            <intent-filter>
                <action android:name="SyncAdapter.PERIODIC_SYNCHRONIZATION_FINISHED" />
                <action android:name="SyncAdapter.SYNCHRONIZATION_FINISHED" />
                <action android:name="SyncAdapter.FULL_SYNCHRONIZATION_FINISHED" />
            </intent-filter>
        </receiver>
    </application>

</manifest>