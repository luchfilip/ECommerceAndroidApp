<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal"
    android:orientation="horizontal"
    app:layout_behavior="@string/appbar_scrolling_view_behavior" >

    <!--
    This layout is a two-pane layout for the Items master/detail flow.
    -->

    <fragment
        android:id="@+id/fragment_orders_list"
        android:name="com.smartbuilders.smartsales.ecommerce.OrdersListFragment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="@integer/two_pane_left_side_weight"
        tools:layout="@layout/fragment_orders_list" />

    <FrameLayout
        android:id="@+id/order_detail_container"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="@integer/two_pane_right_side_weight"
        android:background="@android:color/white" />

</LinearLayout>