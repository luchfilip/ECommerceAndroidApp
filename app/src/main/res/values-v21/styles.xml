<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="logo">@drawable/actionbar_logo</item>
        <item name="android:displayOptions">showHome|useLogo</item>
        <item name="displayOptions">showHome|useLogo</item>
        <item name="android:windowActionBarOverlay">true</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="MainButtonAppTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:theme">@style/Theme.MaterialMainButton</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>

    <style name="Theme.MaterialMainButton" parent="AppTheme">
        <item name="colorAccent">@color/colorPrimaryMedium</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>

    <style name="GoldenButtonAppTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:theme">@style/Theme.MaterialGoldenButton</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>

    <style name="Theme.MaterialGoldenButton" parent="AppTheme">
        <item name="colorAccent">@color/golden_medium</item>
        <item name="colorButtonNormal">@color/golden</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>

    <style name="GreyButtonAppTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:theme">@style/Theme.MaterialGreyButton</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>

    <style name="Theme.MaterialGreyButton" parent="AppTheme">
        <item name="colorAccent">@color/grey_medium</item>
        <item name="colorButtonNormal">@color/grey</item>
        <item name="android:layout_height">@dimen/button_height</item>
    </style>

    <style name="image_button_style">
        <item name="android:foreground">@drawable/ripple</item>
    </style>

    <style name="shape_style">
        <item name="android:elevation">1dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>
</resources>
