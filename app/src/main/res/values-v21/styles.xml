    <style name="Theme.MaterialGreyButton" parent="AppTheme">
        <item name="colorAccent">@color/grey_medium</item>
        <item name="colorButtonNormal">@color/grey</item>
    </style>

    <style name="image_button_style">
        <item name="android:foreground">@drawable/ripple</item>
    </style>

    <style name="shape_style">
        <item name="android:elevation">0dp</item>
        <item name="android:layout_margin">4dp</item>
    </style>
</resources>
