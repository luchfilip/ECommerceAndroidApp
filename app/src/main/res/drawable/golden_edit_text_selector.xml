<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:padding="10dp" android:shape="rectangle">
            <solid android:color="@color/golden" />
            <stroke android:width="1.5dp" android:color="@color/golden" />
            <corners android:radius="0dp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:padding="10dp" android:shape="rectangle">
            <solid android:color="@color/golden_light" />
            <stroke android:width="1.5dp" android:color="@color/golden" />
            <corners android:radius="0dp" />
        </shape>
    </item>
    <item android:drawable="@color/golden_medium" /><!-- default -->
</selector>