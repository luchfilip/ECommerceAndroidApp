<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State when a row is being pressed, but hasn't yet been activated (finger down) -->
    <item android:state_pressed="true" android:drawable="@drawable/shape_selector_state_pressed" />

    <!-- When the view is "activated".  In SINGLE_CHOICE_MODE, it flags the active row
         of a ListView -->
    <item android:state_activated="true" android:drawable="@drawable/shape_selector_state_activated" />

    <!-- Default, "just hangin' out" state. -->
    <item android:drawable="@drawable/shape_chat_message_sent" />
</selector>