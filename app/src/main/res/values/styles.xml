<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="logo">@drawable/actionbar_logo</item>
        <item name="displayOptions">showHome|useLogo</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.WithActionBar">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="SplashTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <style name="toolbar_products_list_style"></style>

    <style name="business_partners_style">
        <!--<item name="android:background">@color/grey_medium</item>-->
    </style>

    <style name="business_partners_list_style">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="categories_style">
        <!--<item name="android:background">@color/grey_medium</item>-->
    </style>

    <style name="categories_list_style">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="sub_categories_style">
        <!--<item name="android:background">@color/grey_medium</item>-->
    </style>

    <style name="sub_categories_list_style">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="orders_style">
        <!--<item name="android:background">@color/grey_medium</item>-->
    </style>

    <style name="orders_list_style">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="shopping_sales_orders_style">
        <!--<item name="android:background">@color/grey_medium</item>-->
    </style>

    <style name="shopping_sales_orders_list_style">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="sales_orders_style">
        <!--<item name="android:background">@color/grey_medium</item>-->
    </style>

    <style name="sales_orders_list_style">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="wish_list_style">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="invoices_list_style">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="brands_list_style">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="title_style">
        <item name="android:background">@color/transparent_white</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="title_text_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#444444</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainButtonAppTheme">
        <item name="android:background">@drawable/main_button_selector</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:minWidth">10dip</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="GoldenButtonAppTheme">
        <item name="android:background">@drawable/golden_button_selector</item>
        <item name="android:textColor">@color/button_text_color</item>
