        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Small</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:minWidth">10dip</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="list_item_style">
        <item name="android:background">@drawable/touch_selector</item>
    </style>

    <style name="image_button_style"></style>

    <style name="go_to_arrow_style">
        <item name="android:visibility">visible</item>
    </style>

    <style name="shape_style">
        <item name="android:layout_margin">4dp</item>
    </style>
</resources>
