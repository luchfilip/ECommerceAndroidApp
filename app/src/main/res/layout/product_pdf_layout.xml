<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/product_pdf_card_shape"
        android:padding="10px"
        android:layout_marginBottom="20px"
        android:layout_marginTop="20px"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/productName_textView"
            android:layout_weight="1"
            android:textStyle="normal|bold"
            android:textColor="@android:color/black"
            android:layout_margin="2px"
            android:textSize="17px" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginLeft="3px"
                android:layout_marginRight="3px"
                android:layout_width="300px"
                android:layout_height="200px">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:background="@android:color/darker_gray"
                    android:layout_height="2px"
                    android:paddingTop="2px"
                    android:paddingRight="2px" />

                <TextView
                    android:layout_height="wrap_content"
                    android:id="@+id/productBrand_textView"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="1px"
                    android:layout_marginTop="1px"
                    android:layout_marginLeft="3px"
                    android:layout_marginRight="1px"
                    android:layout_width="match_parent"
                    android:textStyle="normal|bold"
                    android:textSize="13px" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/productDescription_textView"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="1px"
                    android:layout_marginTop="1px"
                    android:layout_marginLeft="3px"
                    android:layout_marginRight="1px"
                    android:textSize="11px" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/productPurpose_textView"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="1px"
                    android:layout_marginTop="1px"
                    android:layout_marginLeft="3px"
                    android:layout_marginRight="1px"
                    android:textSize="11px" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/productCommercialPackage_textView"
                    android:textColor="@android:color/black"
                    android:layout_marginBottom="1px"
                    android:layout_marginTop="1px"
                    android:layout_marginLeft="3px"
                    android:layout_marginRight="1px"
                    android:textSize="11px" />

                <TableLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="bottom"
                    android:layout_marginBottom="1px"
                    android:layout_marginTop="1px"
                    android:layout_marginLeft="3px"
                    android:layout_marginRight="1px">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/dark_grey"
                            android:layout_margin="1dp"
                            android:paddingBottom="1dp"
                            android:paddingTop="1dp"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:layout_weight="1" >
                            <TextView
                                android:text="@string/code"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/white"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:id="@+id/productCodeLabel_textView"
                                android:textSize="12px" />
                        </FrameLayout>


                        <FrameLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@color/dark_grey"
                            android:layout_margin="1dp"
                            android:paddingBottom="1dp"
                            android:paddingTop="1dp"
                            android:paddingLeft="2dp"
                            android:paddingRight="2dp"
                            android:layout_weight="1">
                            <TextView
                                android:text="@string/reference"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@android:color/white"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:id="@+id/productReferenceLabel_textView"
                                android:textSize="12px" />
                        </FrameLayout>
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/productCode_textView"
                            android:layout_gravity="center"
                            android:textColor="@android:color/black"
                            android:layout_marginBottom="2px"
                            android:layout_marginTop="2px"
                            android:layout_marginLeft="5px"
                            android:layout_marginRight="5px"
                            android:layout_weight="1"
                            android:textSize="12px" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/productReference_textView"
                            android:layout_gravity="center"
                            android:textColor="@android:color/black"
                            android:layout_marginBottom="2px"
                            android:layout_marginTop="2px"
                            android:layout_marginLeft="5px"
                            android:layout_marginRight="5px"
                            android:layout_weight="1"
                            android:textSize="12px" />
                    </TableRow>

                </TableLayout>
            </LinearLayout>

            <ImageView
                android:id="@+id/productImage_imageView"
                android:layout_gravity="center"
                android:layout_margin="3px"
                android:layout_width="130px"
                android:layout_height="130px" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>