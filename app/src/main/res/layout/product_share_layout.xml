<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4px"
    android:layout_margin="4px"
    android:background="@drawable/product_share_shape_primary_color_bg" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="6px">

            <ImageView
                android:layout_width="40px"
                android:layout_height="40px"
                android:id="@+id/imageView3"
                android:src="@drawable/ic_launcher"
                android:layout_gravity="center_vertical" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_name"
                android:id="@+id/textView2"
                android:textStyle="bold|italic"
                android:textSize="40px"
                android:layout_marginLeft="8px"
                android:textColor="@color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="6px"
            android:padding="8px"
            android:background="@drawable/product_share_shape"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="300px"
                android:layout_height="300px"
                android:id="@+id/product_image"
                android:layout_gravity="center"
                android:src="@drawable/no_image_available" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="440px"
                android:layout_height="300px"
                android:layout_marginLeft="8px"
                android:layout_marginRight="4px">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/product_name"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="20px"
                    android:layout_marginBottom="1px" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/product_internal_code"
                    android:textColor="@color/black"
                    android:layout_marginTop="1px"
                    android:layout_marginBottom="1px"
                    android:textStyle="bold"
                    android:textSize="18px" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/product_brand"
                    android:textColor="@color/black"
                    android:textSize="18px"
                    android:layout_marginTop="1px"
                    android:layout_marginBottom="1px" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/product_description"
                    android:layout_marginTop="1px"
                    android:layout_marginBottom="1px"
                    android:textColor="@color/black"
                    android:textSize="18px" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/product_purpose"
                    android:layout_marginTop="1px"
                    android:layout_marginBottom="1px"
                    android:textColor="@color/black"
                    android:textSize="18px" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>