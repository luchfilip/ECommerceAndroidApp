<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailFragment"
    android:id="@+id/product_detail_main_view"
    android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:focusable="false">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_view"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="2dp"
                card_view:contentPadding="5dp"
                card_view:cardElevation="2dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@android:color/white"
                android:focusable="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/product_name"
                        android:textStyle="bold"
                        android:textColor="@android:color/black"
                        android:focusable="true" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/viewpager_height"
                        android:id="@+id/product_image"
                        android:focusable="false" />

                    <android.support.v4.view.ViewPager
                        android:id="@+id/pager"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/viewpager_height"
                        android:focusable="false" />

                    <RadioGroup
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|bottom"
                        android:orientation="horizontal"
                        android:id="@+id/radiogroup"
                        android:gravity="center_horizontal"
                        android:focusable="false">

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/radioButton"
                            android:scaleX="@integer/radioButton_scale"
                            android:scaleY="@integer/radioButton_scale"
                            android:checked="true" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleX="@integer/radioButton_scale"
                            android:scaleY="@integer/radioButton_scale"
                            android:id="@+id/radioButton2" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleX="@integer/radioButton_scale"
                            android:scaleY="@integer/radioButton_scale"
                            android:id="@+id/radioButton3" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleX="@integer/radioButton_scale"
                            android:scaleY="@integer/radioButton_scale"
                            android:id="@+id/radioButton4" />

                        <RadioButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleX="@integer/radioButton_scale"
                            android:scaleY="@integer/radioButton_scale"
                            android:id="@+id/radioButton5" />
                    </RadioGroup>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:focusable="false">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginLeft="2dp"
                            android:layout_marginRight="2dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Product productBrand"
                                android:id="@+id/product_brand"
                                android:textSize="10dp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Comercial Package"
                                android:id="@+id/product_comercial_package" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Price"
                                android:id="@+id/product_price"
                                android:textSize="13dp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="PMVP"
                                android:id="@+id/product_pmvp"
                                android:textSize="13dp" />

                            <TextView
                                android:id="@+id/product_availability"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Availability"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Product with promotion"
                                android:id="@+id/product_promo"
                                android:textColor="@color/promo_label_color" />

                            <RatingBar
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                style="?android:attr/ratingBarStyleSmall"
                                android:progressTint="@color/ratingbar_progress"
                                android:numStars="5"
                                android:rating="2.5"
                                android:id="@+id/product_ratingbar" />

                        </LinearLayout>

                    </LinearLayout>

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="wrap_content"
                        android:layout_height="38dp"
                        android:text="@string/add_to_cart"
                        android:id="@+id/product_addtocart_button"
                        android:layout_gravity="center_vertical|right"
                        android:textAppearance="@android:style/TextAppearance.Small"
                        android:gravity="center_vertical"
                        android:visibility="gone" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_details_description"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="2dp"
                card_view:contentPadding="5dp"
                card_view:cardElevation="2dp"
                android:layout_margin="5dp"
                app:cardBackgroundColor="@android:color/white"
                android:focusable="false">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/product_details_label"
                        android:textColor="@color/label_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/lorem_ipsum"
                        android:id="@+id/product_detail_description"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/border_shadow"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:id="@+id/relatedproducts_linearlayout"
                android:focusable="false">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/related_products"
                    android:id="@+id/related_products"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="8dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:focusable="false" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/relatedproducts_recycler_view"
                    android:scrollbars="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false" />
            </LinearLayout>

        </LinearLayout>
</ScrollView>
