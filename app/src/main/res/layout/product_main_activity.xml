<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingRight="6dp"
    android:paddingBottom="2dp"
    android:paddingLeft="6dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/shape_style"
        android:background="@drawable/shape"
        android:padding="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/go_to_product_details">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/product_name"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/productDetailCardView_productName_text_size"
                android:maxLines="2"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:id="@+id/product_image"
                android:layout_gravity="center"
                android:padding="5dp" />

            <TextView
                android:id="@+id/product_availability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/product_availability"
                android:textStyle="bold"
                android:textSize="@dimen/productDetailCardView_productAvailability_text_size" />

        </LinearLayout>

        <View style="@style/Divider"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:layout_marginTop="2dp"
            android:baselineAligned="false">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/share_imageView"
                android:src="@drawable/ic_share_black_24dp"
                style="@style/image_button_style"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/favorite_imageView"
                style="@style/image_button_style"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addToShoppingCart_imageView"
                android:src="@drawable/ic_add_shopping_cart_black_24dp"
                style="@style/image_button_style"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_gravity="center"
                android:padding="3dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" />

            <ImageView
                style="@style/image_button_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addToShoppingSale_imageView"
                android:src="@drawable/ic_add_shopping_cart_black_24dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_gravity="center"
                android:padding="3dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" />

        </LinearLayout>

    </LinearLayout>
</FrameLayout>