<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/wish_list_item_image_width"
        android:layout_height="@dimen/wish_list_item_image_height"
        android:id="@+id/product_image"
        android:layout_gravity="center"
        android:layout_margin="4dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:paddingLeft="4dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/product_name"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:layout_gravity="center_vertical"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/delete_item_button_img"
                android:layout_gravity="right"
                android:src="@drawable/ic_highlight_off_black"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="4dp"
                android:paddingTop="10dp"
                android:paddingRight="5dp"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_brand" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_availability"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@color/product_availability"
            android:textStyle="bold" />

        <Button
            style="@style/MainButtonAppTheme"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="@string/buy"
            android:id="@+id/product_addtoshoppingcart_button"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp" />

        <Button
            style="@style/GoldenButtonAppTheme"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:text="@string/sell"
            android:id="@+id/product_addtoshoppingsales_button"
            android:layout_marginTop="2dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp" />

    </LinearLayout>
</LinearLayout>