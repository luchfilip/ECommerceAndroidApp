<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    style="@style/shape_style"
    android:background="@drawable/shape">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/wish_list_item_image_width"
            android:layout_height="@dimen/wish_list_item_image_height"
            android:id="@+id/product_image"
            android:layout_gravity="center"
            android:layout_margin="4dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/product_name"
                    android:layout_weight="1"
                    android:textColor="@android:color/black"
                    android:layout_gravity="center_vertical"
                    android:textStyle="bold"
                    android:layout_marginRight="4dp"
                    android:maxLines="2" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/delete_item_button_img"
                    android:layout_gravity="right"
                    android:src="@drawable/ic_highlight_off_black" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/product_brand"
                android:textColor="@android:color/black"
                android:textSize="@dimen/productDetailCardView_productBrand_text_size" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/product_commercial_package"
                android:textColor="@android:color/black"
                android:textSize="@dimen/productDetailCardView_productCommercialPackage_text_size" />

            <TextView
                android:id="@+id/product_availability"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/product_availability"
                android:textStyle="bold"
                android:textSize="@dimen/productDetailCardView_productAvailability_text_size" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:progressTint="@color/ratingbar_progress"
                android:numStars="5"
                android:rating="2.5"
                android:id="@+id/product_ratingbar" />
        </LinearLayout>

    </LinearLayout>

    <View style="@style/Divider" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/share_imageView"
                android:src="@drawable/ic_share_black_24dp"
                style="@style/image_button_style"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:padding="5dp"
                android:layout_marginRight="4dp" />
        </LinearLayout>

        <Button
            style="@style/MainButtonAppTheme"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="@string/buy"
            android:id="@+id/product_addtoshoppingcart_button"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp" />

        <Button
            style="@style/GoldenButtonAppTheme"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="@string/sell"
            android:id="@+id/product_addtoshoppingsales_button"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp" />

    </LinearLayout>

</LinearLayout>