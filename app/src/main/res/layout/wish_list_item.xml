<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/wish_list_item_image_width"
        android:layout_height="@dimen/wish_list_item_image_height"
        android:id="@+id/product_image"
        android:layout_gravity="center|top"
        android:layout_margin="4dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/product_name"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:layout_gravity="center_vertical"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/delete_item_button_img"
                android:layout_gravity="right"
                android:src="@drawable/ic_highlight_off_black"
                android:layout_marginLeft="4dp"
                android:layout_marginBottom="4dp"
                android:paddingTop="10dp"
                android:paddingRight="10dp"
                android:paddingLeft="10dp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_commercial_package"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:textColor="@color/colorPrimaryDark" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="38dp"
            android:text="@string/move_to_shopping_cart"
            android:id="@+id/move_to_cart_button"
            android:layout_gravity="center_vertical|right"
            android:textAppearance="@android:style/TextAppearance.Small"
            android:gravity="bottom" />

    </LinearLayout>
</LinearLayout>