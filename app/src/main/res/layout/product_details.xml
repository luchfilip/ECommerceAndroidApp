<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/shape_style"
    android:background="@drawable/shape">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/product_name"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/productDetailCardView_name_text_size"
        android:lines="1"
        android:layout_margin="2dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="@dimen/productDetail_max_image_Width"
            android:layout_height="@dimen/productDetail_max_image_Height"
            android:id="@+id/product_image"
            android:layout_gravity="center"
            android:padding="5dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:minHeight="@dimen/productDetail_max_image_Height">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/go_to_product_details"
                android:layout_weight="1"
                android:gravity="top">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/product_internal_code"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/product_brand"
                    android:textColor="@color/black"
                    android:maxLines="1"
                    android:textSize="@dimen/productDetailCardView_brand_text_size" />

                <TextView
                    android:id="@+id/product_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/product_price_color"
                    android:textStyle="bold"
                    android:textSize="@dimen/productDetailCardView_price_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/product_ratingBar_container"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/product_ratingBar_label_textView"
                        style="@style/product_ratingBar_text_label_style" />

                    <RatingBar
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        style="?android:attr/ratingBarStyleSmall"
                        android:progressTint="@color/ratingBar_progress_color"
                        android:numStars="5"
                        android:rating="2.5"
                        android:id="@+id/product_ratingBar"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="1dp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false">

                <TextView
                    android:id="@+id/product_availability"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/product_availability_color"
                    android:textStyle="bold"
                    android:textSize="@dimen/productDetailCardView_availability_text_size" />

                <View style="@style/Divider"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:gravity="right">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/share_imageView"
                        android:src="@drawable/ic_share_black_24dp"
                        style="@style/image_button_style"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:padding="3dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="4dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/favorite_imageView"
                        style="@style/image_button_style"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:padding="3dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/addToShoppingCart_imageView"
                        android:src="@drawable/ic_add_shopping_cart_black_24dp"
                        style="@style/image_button_style"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_gravity="center"
                        android:padding="3dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp" />

                    <ImageView
                        style="@style/image_button_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/addToShoppingSale_imageView"
                        android:src="@drawable/ic_add_shopping_cart_black_24dp"
                        android:background="?attr/selectableItemBackground"
                        android:clickable="true"
                        android:layout_gravity="center"
                        android:padding="3dp"
                        android:layout_marginLeft="4dp"
                        android:layout_marginRight="4dp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>