<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/productMinInfo_cardView_Width"
    android:layout_height="wrap_content"
    style="@style/shape_style"
    android:background="@drawable/shape"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/go_to_product_details">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_name"
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="2dp"
            android:textSize="@dimen/productMinInfo_product_name_text_size"
            android:lines="2"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="@dimen/productMinInfo_max_image_Width"
            android:layout_height="@dimen/productMinInfo_max_image_Height"
            android:id="@+id/product_image"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/product_availability"
            android:textSize="@dimen/productMinInfo_availability_text_size"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/product_availability"
            android:singleLine="false"
            android:lines="1" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="?android:attr/ratingBarStyleSmall"
            android:progressTint="@color/rating_bar_progress"
            android:numStars="5"
            android:rating="2.5"
            android:id="@+id/product_ratingbar"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="2dp"
            android:visibility="gone" />

    </LinearLayout>

    <View style="@style/Divider"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:baselineAligned="false">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/share_imageView"
                android:src="@drawable/ic_share_black_24dp"
                style="@style/image_button_style"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_gravity="center"
                android:padding="3dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/favorite_imageView"
                style="@style/image_button_style"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_gravity="center"
                android:padding="3dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addToShoppingCart_imageView"
                android:src="@drawable/ic_add_shopping_cart_black_24dp"
                style="@style/image_button_style"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_gravity="center"
                android:padding="3dp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                style="@style/image_button_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addToShoppingSale_imageView"
                android:src="@drawable/ic_add_shopping_cart_black_24dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_gravity="center"
                android:padding="3dp" />
        </FrameLayout>

    </LinearLayout>
</LinearLayout>