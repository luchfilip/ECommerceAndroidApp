<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#F4511E"
    android:gravity="center">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lines="@integer/welcome_layout_title_lines"
        android:text="@string/welcome_layout_recommended_products_title"
        android:textColor="@android:color/white"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:textSize="@dimen/welcome_layout_title_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_weight="@integer/welcome_layout_top_container_weight">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_thumb_up_black_48dp"
            android:layout_gravity="center_horizontal|bottom"
            android:background="@drawable/shape_circular_transparent_white"/>
        <TextView
            android:text="@string/welcome_layout_recommended_products_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/welcome_layout_subtitle_text_size"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:textStyle="normal|bold" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="@integer/welcome_layout_bottom_container_weight">
        <TextView
            android:text="@string/welcome_layout_recommended_products_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/welcome_layout_details_text_size"
            android:layout_marginTop="10dp"
            android:layout_gravity="top"
            android:gravity="center_horizontal"
            android:textColor="@android:color/white" />
    </FrameLayout>
</LinearLayout>