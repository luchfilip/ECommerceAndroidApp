<resources>
    <style name="MainButtonAppTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:theme">@style/Theme.MaterialMainButton</item>
        <item name="android:textColor">@color/main_button_text_color</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:minWidth">10dip</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="InverseMainButtonAppTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:theme">@style/Theme.InverseMaterialMainButton</item>
        <item name="android:textColor">@color/inverse_main_button_text_color</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:minWidth">10dip</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="Theme.MaterialMainButton" parent="AppTheme">
        <item name="colorAccent">@color/colorPrimaryMedium</item>
        <item name="colorButtonNormal">@color/colorPrimary</item>
    </style>

    <style name="Theme.InverseMaterialMainButton" parent="AppTheme">
        <item name="colorAccent">@android:color/white</item>
        <item name="colorButtonNormal">@android:color/white</item>
    </style>

    <style name="GoldenButtonAppTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:theme">@style/Theme.MaterialGoldenButton</item>
        <item name="android:textColor">@color/golden_button_text_color</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:minWidth">10dip</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="Theme.MaterialGoldenButton" parent="AppTheme">
        <item name="colorAccent">@color/golden_medium</item>
        <item name="colorButtonNormal">@color/golden</item>
    </style>

    <style name="GreyButtonAppTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:theme">@style/Theme.MaterialGreyButton</item>
        <item name="android:textColor">@color/button_text_color</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:minWidth">10dip</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="Theme.MaterialGreyButton" parent="AppTheme">
        <item name="colorAccent">@color/grey_medium</item>
        <item name="colorButtonNormal">@color/grey</item>
    </style>

    <style name="BlackButtonAppTheme" parent="Widget.AppCompat.Button.Colored">
        <item name="android:theme">@style/Theme.MaterialBlackButton</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:minWidth">10dip</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="Theme.MaterialBlackButton.Button" parent="AppTheme">
        <item name="colorAccent">@color/black</item>
        <item name="colorButtonNormal">@android:color/black</item>
    </style>
</resources>
