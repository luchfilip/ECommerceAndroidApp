    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/product_detail_main_view"
        tools:context="com.smartbuilders.smartsales.ecommerceandroidapp.ProductDetailActivity"
        android:orientation="vertical">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:descendantFocusability="blocksDescendants" >

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_view"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="2dp"
                    card_view:contentPadding="5dp"
                    card_view:cardElevation="2dp"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@android:color/white"
                    android:focusable="true">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/product_name"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            android:textSize="@dimen/productDetailActivity_productName_text_size"
                            android:focusable="false" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:baselineAligned="false">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/viewpager_height"
                                android:id="@+id/product_image"
                                android:focusable="false"
                                android:layout_margin="4dp"
                                android:layout_weight="4" />

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_weight="6"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp">

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/product_brand"
                                    android:textSize="@dimen/productDetailActivity_productBrand_text_size"
                                    android:focusable="false"
                                    android:textColor="@color/colorPrimaryDark" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/productDetailActivity_productCommercialPackage_text_size"
                                    android:id="@+id/product_comercial_package"
                                    android:focusable="false"
                                    android:textColor="@color/colorPrimaryDark" />

                                <TextView
                                    android:id="@+id/product_availability"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/productDetailActivity_productAvailability_text_size"
                                    android:textStyle="bold"
                                    android:focusable="false"
                                    android:textColor="@color/colorPrimaryDark" />

                                <RatingBar
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="?android:attr/ratingBarStyleSmall"
                                    android:progressTint="@color/ratingbar_progress"
                                    android:numStars="5"
                                    android:rating="2.5"
                                    android:id="@+id/product_ratingbar"
                                    android:focusable="false" />

                                <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:layout_gravity="bottom"
                                    android:gravity="bottom">

                                    <Button
                                        style="?android:attr/buttonStyleSmall"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/add_to_wishlist"
                                        android:id="@+id/product_addtowishlist_button"
                                        android:textAppearance="@android:style/TextAppearance.Small"
                                        android:layout_gravity="bottom|right"
                                        android:focusable="false" />

                                    <Button
                                        style="?android:attr/buttonStyleSmall"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/add_to_shopping_cart"
                                        android:id="@+id/product_addtoshoppingcart_button"
                                        android:textAppearance="@android:style/TextAppearance.Small" />

                                    <Button
                                        style="?android:attr/buttonStyleSmall"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="@string/add_to_shopping_sales"
                                        android:id="@+id/product_addtoshoppingsales_button"
                                        android:textAppearance="@android:style/TextAppearance.Small" />
                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/card_details_description"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="2dp"
                    card_view:contentPadding="5dp"
                    card_view:cardElevation="2dp"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@android:color/white"
                    android:focusable="false">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/product_details_label"
                            android:textSize="@dimen/productDetailActivity_details_label_text_size"
                            android:textColor="@color/label_color"
                            android:focusable="false" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/product_detail_description"
                            android:textSize="@dimen/productDetailActivity_details_text_size"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:focusable="false"
                            android:textColor="@android:color/black" />
                    </LinearLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/related_shopping_products_card_view"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="2dp"
                    card_view:contentPadding="5dp"
                    card_view:cardElevation="2dp"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@android:color/white"
                    android:focusable="false">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/related_shopping_products"
                            android:id="@+id/related_shopping_products"
                            android:textSize="@dimen/related_products_label_text_size"
                            android:focusable="false"
                            android:textColor="@color/label_color" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/related_shopping_products_recycler_view"
                            android:scrollbars="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:layout_marginTop="5dp" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/related_products_by_brand_card_view"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="2dp"
                    card_view:contentPadding="5dp"
                    card_view:cardElevation="2dp"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@android:color/white"
                    android:focusable="false" >

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/related_products_by_brand_tv"
                            android:textSize="@dimen/related_products_label_text_size"
                            android:textColor="@color/label_color"
                            android:focusable="false" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/related_products_by_brand_recycler_view"
                            android:scrollbars="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:focusable="false" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/relatedproducts_card_view"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="2dp"
                    card_view:contentPadding="5dp"
                    card_view:cardElevation="2dp"
                    android:layout_margin="5dp"
                    app:cardBackgroundColor="@android:color/white"
                    android:focusable="false">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:focusable="false">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/related_products"
                            android:id="@+id/related_products"
                            android:textSize="@dimen/related_products_label_text_size"
                            android:focusable="false"
                            android:textColor="@color/label_color" />

                        <android.support.v7.widget.RecyclerView
                            android:id="@+id/relatedproducts_recycler_view"
                            android:scrollbars="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:focusable="false"
                            android:layout_marginTop="5dp" />
                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>
    </ScrollView>
<!--</FrameLayout>-->