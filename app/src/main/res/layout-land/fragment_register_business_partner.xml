<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout android:id="@+id/progressContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:gravity="center"
        android:layout_margin="10dp">

        <ProgressBar style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/loading"
            android:paddingTop="4dip"
            android:singleLine="true" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/scrollView"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginBottom="5dp"
            android:layout_weight="1">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:padding="10dp">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/business_partner_internal_code_tableRow"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/business_partner_internal_code_label"
                        android:id="@+id/business_partner_internal_code_label"
                        android:textColor="@color/black"
                        android:gravity="center_vertical|right"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/business_partner_internal_code_textView"
                        android:textColor="@color/black"
                        android:padding="5dp"
                        android:textAppearance="@android:style/TextAppearance.Medium" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/business_partner_name_label"
                        android:textColor="@color/black"
                        android:gravity="center_vertical|right"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/business_partner_name_editText"
                        android:inputType="textMultiLine|textCapSentences"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/business_partner_name_textView"
                        android:textColor="@color/black"
                        android:visibility="gone"
                        android:padding="5dp"
                        android:textAppearance="@android:style/TextAppearance.Medium" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/business_partner_commercial_name_label"
                        android:textColor="@color/black"
                        android:gravity="center_vertical|right"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/business_partner_commercial_name_editText"
                        android:inputType="textMultiLine|textCapSentences"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/business_partner_commercial_name_textView"
                        android:textColor="@color/black"
                        android:visibility="gone"
                        android:padding="5dp"
                        android:textAppearance="@android:style/TextAppearance.Medium" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/business_partner_tax_id_label"
                        android:textColor="@color/black"
                        android:gravity="center_vertical|right"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/business_partner_tax_id_editText"
                        android:inputType="textMultiLine|textCapSentences"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/business_partner_tax_id_textView"
                        android:textColor="@color/black"
                        android:visibility="gone"
                        android:padding="5dp"
                        android:textAppearance="@android:style/TextAppearance.Medium" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/address_label"
                        android:textColor="@color/black"
                        android:gravity="center_vertical|right"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/business_partner_address_editText"
                        android:inputType="textMultiLine|textCapSentences"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/business_partner_address_textView"
                        android:textColor="@color/black"
                        android:visibility="gone"
                        android:padding="5dp"
                        android:textAppearance="@android:style/TextAppearance.Medium" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/business_partner_contact_person_tableRow">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_person_label"
                        android:textColor="@color/black"
                        android:gravity="center_vertical|right"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/business_partner_contact_person_name_editText"
                        android:inputType="textMultiLine|textCapSentences"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/business_partner_contact_person_name_textView"
                        android:textColor="@color/black"
                        android:visibility="gone"
                        android:padding="5dp"
                        android:textAppearance="@android:style/TextAppearance.Medium" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/email_address_label"
                        android:textColor="@color/black"
                        android:gravity="center_vertical|right"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:ems="10"
                        android:id="@+id/business_partner_email_address_editText"
                        android:paddingEnd="5dp"
                        android:paddingStart="5dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoLink="email"
                        android:textColorLink="@color/emailLinkColor"
                        android:id="@+id/business_partner_email_address_textView"
                        android:textColor="@color/black"
                        android:visibility="gone"
                        android:padding="5dp"
                        android:textAppearance="@android:style/TextAppearance.Medium" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/phone_number_label"
                        android:textColor="@color/black"
                        android:gravity="center_vertical|right"
                        android:textStyle="bold" />

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:ems="10"
                        android:id="@+id/business_partner_phone_number_editText"
                        android:paddingStart="5dp"
                        android:paddingEnd="5dp"
                        android:layout_weight="1" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorLink="@color/phoneNumberLinkColor"
                        android:autoLink="phone"
                        android:id="@+id/business_partner_phone_number_textView"
                        android:textColor="@color/black"
                        android:visibility="gone"
                        android:padding="5dp"
                        android:textAppearance="@android:style/TextAppearance.Medium" />
                </TableRow>
            </TableLayout>
        </ScrollView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/register"
            android:id="@+id/save_button"
            android:layout_gravity="right"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp" />
    </LinearLayout>

</LinearLayout>