<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/shape_style"
    android:background="@drawable/shape">

    <ImageView
        android:layout_width="@dimen/productLargeDetail_max_image_Width"
        android:layout_height="@dimen/productLargeDetail_max_image_Height"
        android:id="@+id/product_image"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="5dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/go_to_product_details"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/product_name"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/productDetailCardView_productName_text_size"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/product_internal_code"
                android:textColor="@color/black"
                android:textSize="@dimen/productDetailCardView_productInternalCode_text_size"
                android:textStyle="bold"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/product_brand"
                android:textColor="@color/black"
                android:textSize="@dimen/productDetailCardView_productBrand_text_size"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/product_details_description"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp"
                android:textColor="@color/black"
                android:textSize="@dimen/productDetailCardView_productDescription_text_size" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/product_commercial_package"
                android:textColor="@color/black"
                android:textSize="@dimen/productDetailCardView_productCommercialPackage_text_size"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp" />

            <TextView
                android:id="@+id/product_availability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/product_availability"
                android:textStyle="bold"
                android:textSize="@dimen/productDetailCardView_productAvailability_text_size"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:progressTint="@color/rating_bar_progress"
                android:numStars="5"
                android:rating="2.5"
                android:id="@+id/product_ratingbar"
                android:layout_marginTop="1dp"
                android:layout_marginBottom="1dp" />
        </LinearLayout>

        <View style="@style/Divider"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|right"
            android:layout_marginTop="2dp"
            android:baselineAligned="false">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/share_imageView"
                android:src="@drawable/ic_share_black_24dp"
                style="@style/image_button_style"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/favorite_imageView"
                style="@style/image_button_style"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:padding="5dp"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addToShoppingCart_imageView"
                android:src="@drawable/ic_add_shopping_cart_black_24dp"
                style="@style/image_button_style"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_gravity="center"
                android:padding="3dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" />

            <ImageView
                style="@style/image_button_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/addToShoppingSale_imageView"
                android:src="@drawable/ic_add_shopping_cart_black_24dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:layout_gravity="center"
                android:padding="3dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>