<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:id="@+id/parent_layout">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:baselineAligned="false"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_weight="1">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/company_logo_name"
                android:layout_marginBottom="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/welcome_message_login_activity"
                android:id="@+id/company_phrase"
                android:layout_gravity="center_horizontal"
                android:textColor="@android:color/white"
                android:textAppearance="@android:style/TextAppearance.Medium" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:background="@drawable/shape"
            android:layout_marginLeft="5dp"
            android:layout_weight="1">

            <EditText
                android:id="@+id/server_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/server_address"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="textUri"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <EditText
                android:id="@+id/user_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/sync_user_group"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textColorHint="@color/material_grey_50"
                android:visibility="gone"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <EditText
                android:id="@+id/accountName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/user_name"
                android:maxLines="1"
                android:singleLine="true"
                android:inputType="text"
                android:focusable="true"
                android:focusableInTouchMode="true" />

            <EditText
                android:id="@+id/accountPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/password"
                android:inputType="text"
                android:maxLines="1"
                android:singleLine="true"
                android:focusable="true"
                android:focusableInTouchMode="true" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout android:id="@+id/progressContainer"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:gravity="center"
        android:layout_margin="10dp">

        <ProgressBar style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/loading"
            android:paddingTop="4dip"
            android:singleLine="true" />

    </LinearLayout>

    <Button
        android:id="@+id/submit"
        style="@style/GreyButtonAppTheme"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/button_height"
        android:text="@string/action_sign_in"
        android:textStyle="bold"
        android:textAppearance="@android:style/TextAppearance.Medium"
        android:paddingLeft="30dp"
        android:paddingRight="30dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset_password"
            android:id="@+id/reset_password_textView"
            android:paddingBottom="8dp"
            android:paddingTop="8dp"
            android:textAppearance="@android:style/TextAppearance.Medium.Inverse"
            android:textStyle="bold"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sign_up"
            android:id="@+id/sign_up_textView"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:textAppearance="@android:style/TextAppearance.Medium.Inverse"
            android:textStyle="bold"
            android:layout_weight="1"
            android:gravity="right" />
    </LinearLayout>

</LinearLayout>
