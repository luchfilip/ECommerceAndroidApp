<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LinearLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:background="@color/White"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="5dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:orientation="vertical"
        android:paddingBottom="0dp" >

		<TextView
		    android:id="@+id/time"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:background="@color/WhiteSmoke"
		    android:paddingTop="2dp"
		    android:text="@string/time"
		    android:textAppearance="?android:attr/textAppearanceMedium" />
	
	    <TimePicker
	        android:id="@+id/timePicker"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:background="@drawable/border_ui_rounded_transparent"
	        android:padding="1dp" />
	
	    <TextView
	        android:id="@+id/repeat"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="@color/WhiteSmoke"
	        android:paddingTop="2dp"
	        android:text="@string/repeat_every"
	        android:textAppearance="?android:attr/textAppearance" />
	
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center_horizontal"
	        android:layout_marginBottom="10dp"
	        android:background="@color/WhiteSmoke"
	        android:gravity="center_horizontal"
	        android:paddingBottom="4dp"
	        android:paddingTop="2dp" >
	
	        <TextView
	            android:id="@+id/monday"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginRight="3dp"
	            android:background="@drawable/border_ui_rounded"
	            android:paddingBottom="2dp"
	            android:paddingLeft="4dp"
	            android:paddingRight="4dp"
	            android:paddingTop="2dp"
	            android:text="@string/monday_abrev"
	            android:textAppearance="?android:attr/textAppearance" />
	
	        <TextView
	            android:id="@+id/tuesday"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="3dp"
	            android:layout_marginRight="3dp"
	            android:background="@drawable/border_ui_rounded"
	            android:paddingBottom="2dp"
	            android:paddingLeft="4dp"
	            android:paddingRight="4dp"
	            android:paddingTop="2dp"
	            android:text="@string/tuesday_abrev"
	            android:textAppearance="?android:attr/textAppearance" />
	
	        <TextView
	            android:id="@+id/wednesday"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="3dp"
	            android:layout_marginRight="3dp"
	            android:background="@drawable/border_ui_rounded"
	            android:paddingBottom="2dp"
	            android:paddingLeft="4dp"
	            android:paddingRight="4dp"
	            android:paddingTop="2dp"
	            android:text="@string/wednesday_abrev"
	            android:textAppearance="?android:attr/textAppearance" />
	
	        <TextView
	            android:id="@+id/thursday"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="3dp"
	            android:layout_marginRight="3dp"
	            android:background="@drawable/border_ui_rounded"
	            android:paddingBottom="2dp"
	            android:paddingLeft="4dp"
	            android:paddingRight="4dp"
	            android:paddingTop="2dp"
	            android:text="@string/thursday_abrev"
	            android:textAppearance="?android:attr/textAppearance" />
	
	        <TextView
	            android:id="@+id/friday"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="3dp"
	            android:layout_marginRight="3dp"
	            android:background="@drawable/border_ui_rounded"
	            android:paddingBottom="2dp"
	            android:paddingLeft="4dp"
	            android:paddingRight="4dp"
	            android:paddingTop="2dp"
	            android:text="@string/friday_abrev"
	            android:textAppearance="?android:attr/textAppearance" />
	
	        <TextView
	            android:id="@+id/saturday"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="3dp"
	            android:layout_marginRight="3dp"
	            android:background="@drawable/border_ui_rounded"
	            android:paddingBottom="2dp"
	            android:paddingLeft="4dp"
	            android:paddingRight="4dp"
	            android:paddingTop="2dp"
	            android:text="@string/saturday_abrev"
	            android:textAppearance="?android:attr/textAppearance" />
	
	        <TextView
	            android:id="@+id/sunday"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="3dp"
	            android:background="@drawable/border_ui_rounded"
	            android:paddingBottom="2dp"
	            android:paddingLeft="4dp"
	            android:paddingRight="4dp"
	            android:paddingTop="2dp"
	            android:text="@string/sunday_abrev"
	            android:textAppearance="?android:attr/textAppearance" />
	    </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal" >

        <Button
            android:id="@+id/cancel"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:minHeight="30dp"
            android:text="@string/cancel"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/holo_orange_dark" />

        <Button
            android:id="@+id/accept"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal"
            android:minHeight="30dp"
            android:text="@string/accept"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="@color/holo_blue_dark" />

    </LinearLayout>

</LinearLayout>